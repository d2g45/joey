{% set bgImage = caseStudy.image.one() %}
<div class="gs-lazy relative group flex flex-col p-4 justify-center items-center lg:items-start lg:justify-start text-center min-h-[200px] max-lg:bg-black max-lg:bg-opacity-10">
	<a href="{{ caseStudy.url }}" title="View Project: {{ caseStudy.title }}" rel="noopener" class="block w-full lg:h-full">
		<h3 class="relative z-10 text-center leading-6 lg:mb-2 lg:text-left lg:opacity-80 lg:group-hover:opacity-100 transition-opacity ease-in-out duration-300">
			{{ caseStudy.title }}
		</h3>

		{% if bgImage %}
			<div class="lg:hidden">
				{% include 'components/background-image' with {
                    image: bgImage
                } %}
			</div>

			<div class="lg:opacity-60 group-hover:opacity-100 transition-all origin-center duration-500 ease-in-out">
				<img class="gs-lazy js-image hidden lg:block w-full" data-src="{{ bgImage.getUrl('threeHundredWide') }}" src="" loading="lazy" alt="{{ bgImage.alt ?? bgImage.title }}"/>
			</div>
		{% else %}
			<div class="hidden lg:block bg-black bg-opacity-10 w-full h-0 lg:h-full"></div>
		{% endif %}
	</a>
</div>
