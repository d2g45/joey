{% extends 'blocks/__base__' %}

{% set classes = ['block-wrapper--no-padding', 'bg-neutral-800'] %}

{% block block_outer %}
    {% set caseStudies = item.caseStudies %}

    <div class="grid grid-rows-1 grid-cols-2 h-screen">
        {% for caseStudy in caseStudies %}
            {% set image = caseStudy.defaultImage.one() ?? null %}

            <div class="relative group col-span-1 flex flex-col items-center justify-center px-6 md:px-10 lg:px-12 xl:px-16">
                {% if image %}
                    {% include 'components/background-image' with {
                        image: image,
                        bg: {
                            fixed: true
                        },
                        overlay: {
                            blur: true
                        }
                    } %}
                {% endif %}

                <div class="relative flex flex-col items-center justify-center gap-4 z-10">
                    <h2 class="gs-lazy mb-4 md:mb-6 lg:mb-8">
                        {{ caseStudy.title }}
                    </h2>

                    <a href="{{ caseStudy.url }}"
                        class="gs-lazy relative z-10 items-center justify-center button button--default__red border-inherit">
                        View Case Study
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
