{% extends 'blocks/__base__' %}

{% block block_wrapper %}
    {% set image = item.image.one() %}
    {% set splitStyle = item.splitStyle %}
    {% switch item.splitStyle %}
    {% case '6040' %}
        {% set parentCols = 'lg:grid-cols-5' %}
        {% set leftSide = 'lg:col-span-3' %}
        {% set rightSide = 'lg:col-span-2' %}
    {% case '4060' %}
        {% set parentCols = 'lg:grid-cols-5' %}
        {% set leftSide = 'lg:col-span-2' %}
        {% set rightSide = 'lg:col-span-3' %}
    {% case '7525' %}
        {% set parentCols = 'lg:grid-cols-4' %}
        {% set leftSide = 'lg:col-span-3' %}
        {% set rightSide = 'lg:col-span-1' %}
    {% case '2575' %}
        {% set parentCols = 'lg:grid-cols-4' %}
        {% set leftSide = 'lg:col-span-1' %}
        {% set rightSide = 'lg:col-span-3' %}
    {% default %}
        {% set parentCols = 'lg:grid-cols-4' %}
        {% set leftSide = 'lg:col-span-2' %}
        {% set rightSide = 'lg:col-span-2' %}
    {% endswitch %}

    <div class="gs-group relative grid grid-cols-1 grid-rows-1 w-full lorge:min-h-screen {{
        parentCols
        }} bg-neutral-900">
        <div class="block-wrapper col-span-1 px-8 flex flex-col items-start justify-center {{
            leftSide
            }}">
            <div class="flex flex-col w-full items-start justify-end lorge:max-w-[80%] yuge:max-w-[60%] self-end">
                {% if item.header %}
                    <h1 class="gs-lazy mb-8 lg:mb-12">
                        {{ item.header }}
                    </h1>
                {% endif %}
                <div class="gs-lazy gs-content text-lg tracking-wide leading-loose xl:columns-2 xl:gap-16 cms-content">
                    {{ item.body|raw }}
                </div>
            </div>
        </div>

        {% if image %}
            <div class="relative col-span-1 {{ rightSide }} max-lg:h-96">
                {% include 'components/background-image' with {
                    image: image
                } %}
            </div>
        {% endif %}
    </div>
{% endblock %}
