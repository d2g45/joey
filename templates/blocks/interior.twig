{% extends 'blocks/__base__' %}

{% set classes = ['bg-neutral-800'] %}

{% block block_content %}
    <div class="w-full cms-content text-white">
        {% if item.header %}
            <h2 class="gs-lazy mb-4 md:mb-6 lg:mb-8">
                {{ item.header }}
            </h2>
        {% endif %}
        <div class="gs-lazy gs-content">
            {{ item.body|raw }}
        </div>
    </div>
{% endblock %}
